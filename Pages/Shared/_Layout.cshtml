<!DOCTYPE html>
<html>

<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/styles/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alexandria:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<body>
    <header class="main-header">
        <section class="top-header">
            <a href="index.html"><img id="main-logo" src="assets/image/logo.png" alt="Logo"></a>
            <section class="icon-container">
                <span class="material-icons" id="account" title="Account">account_circle</span>
                <span class="material-icons" id="view-switch-dark" title="Switch to Dark Mode">dark_mode</span>
                <span class="material-icons" id="view-switch-light" title="Switch to Light Mode">light_mode</span>
                <span class="material-icons" id="text-inc" title="Increase text size">text_increase</span>
                <span class="material-icons" id="text-reset" title="Reset text size">font_download</span>
                <span class="material-icons" id="text-dec" title="Decrease text size">text_decrease</span>
            </section>
        </section>
        <section id="form-popup">
            <form id="login-form-container">
                <div id="login-form-exit">&#9932;</div>
                <h1>Login</h1>
                <label>Email: </label><br>
                <input type="text" name="email" inputmode="email" title="Enter a valid email address" required><br><br>
                <label>Password: </label><br>
                <input type="text" name="pass" required><br>
                <button type="submit" class="submit-button">Submit</button>
                <p id="to-register">Not registered yet? Click here</p>
            </form>
            <form id="register-form-container">
                <div id="register-form-exit">&#9932;</div>
                <h1>Register</h1>
                <label>First name: </label><br>
                <input type="text" name="fname" pattern="[A-Za-z ]+" title="Use only uppercase and lowercase letters to write name." required><br><br>
                <label>Last name: </label><br>
                <input type="text" name="lname" pattern="[A-za-z ]+" title="Use only uppercase and lowercase letters to write name." required><br><br>
                <label>Email: </label><br>
                <input type="email" name="emailaddress" inputmode="email" title="Enter a valid email address" required><br><br>
                <label>Password: </label><br>
                <input type="text" name="pass" required><br>
                <button type="submit" class="submit-button">Submit</button>
                <p id="to-login">Login here</p>
            </form>
        </section>
        <nav class="navbar" id="menu">
            <p>MENU &#9776;</p>
        </nav>
        <nav class="navbar" id="main-nav">
            @{
                string activePage = ViewData["ActivePage"] as string ?? "";
            }
            <a class="@((string)activePage == "home" ? "nav-active" : "")" href="Index">HOME</a>
            <a class="@((string)activePage == "product" ? "nav-active" : "")" href="Products">PRODUCTS</a>
            <a class="@((string)activePage == "categories" ? "nav-active" : "")" href="categories">CATEGORIES</a>
        </nav>
        <nav class="navbar" id="nav-small-screen">
            @{
                string activePageNavSmall = ViewData["ActivePage"] as string ?? "";
            }
            <a class="@((string)activePageNavSmall == "home" ? "nav-active" : "")" href="Index">HOME</a>
            <a class="@((string)activePageNavSmall == "newreleases" ? "nav-active" : "")" href="Product">PRODUCTS</a>
            <a class="@((string)activePageNavSmall == "categories" ? "nav-active" : "")" href="categories">CATEGORIES</a>
            <p id="nav-close">CLOSE &#9932;</p>
        </nav>
    </header>

    <div>
        @RenderBody()
    </div>

    <footer>
        <p>Website by Dustin Sumartlie (T0286006)</p>
        <p>Nottingham Trent University 2022</p>
    </footer>

    <script src="script/slideshowGallery.js"></script>
    <script src="script/switchView.js"></script>
    <script src="script/forms.js"></script>
    <script src="script/navSmall.js"></script>
    <script src="script/fontSize.js"></script>
</body>

</html>